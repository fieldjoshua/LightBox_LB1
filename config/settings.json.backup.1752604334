{
  "platform": "raspberry_pi",
  "matrix_type": "hub75",
  "target_fps": 30,
  "brightness": 0.8,
  "animation_program": "aurora_hub75",
  "hub75": {
    "rows": 64,
    "cols": 64,
    "chain_length": 1,
    "parallel": 1,
    "hardware_mapping": "adafruit-hat",
    "gpio_slowdown": 2,
    "pwm_bits": 8,
    "pwm_lsb_nanoseconds": 100,
    "limit_refresh": 150,
    "scan_mode": 0,
    "row_address_type": 0,
    "multiplexing": 0,
    "disable_hardware_pulsing": false,
    "show_refresh_rate": true,
    "pwm_dither_bits": 2,
    "hardware_pwm": "auto",
    "cpu_isolation": true
  },
  "performance": {
    "stats_interval": 5,
    "buffer_pool_size": 4,
    "show_refresh_rate": true,
    "cpu_isolation": true,
    "fixed_frame_time": true,
    "use_double_buffering": true,
    "optimize_drawing": true,
    "enable_caching": true,
    "cache_size": 2000,
    "adaptive_fps": true,
    "frame_skip": 0
  },
  "web": {
    "host": "0.0.0.0",
    "port": 8888,
    "debug": false,
    "enable_cors": true,
    "update_batch_ms": 50
  },
  "animations": {
    "speed": 1.0,
    "intensity": 1.0,
    "scale": 1.0,
    "gamma": 2.2,
    "saturation": 0.9,
    "hue_offset": 0.3,
    "color_intensity": 1.0,
    "time_scale": 0.03,
    "particle_count": 150,
    "wave_frequency": 1.0,
    "wave_amplitude": 1.0,
    "effect_layering": true
  }
}